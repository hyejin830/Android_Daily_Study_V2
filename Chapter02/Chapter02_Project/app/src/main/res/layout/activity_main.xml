<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_save_restore_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_restore_text_data" />

    <Button
        android:id="@+id/btn_start_layout_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_layout_activity" />

    <Button
        android:id="@+id/btn_start_custom_view_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_star_indicator_custom_view" />


</LinearLayout>