    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_layout.CustomViewExampleActivity">

    <com.example.chapter02_project.view_layout.MyCustomView
        android:id="@+id/indicator"
        app:selected="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.example.chapter02_project.view_layout.MyCustomView>

    <Button
        android:id="@+id/btn_update_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_update_indicator"/>


</RelativeLayout>